{% extends "layout.njk" %}
{% block  content %}
<header class="d-flex justify-content-center py-3">
  <ul class="nav nav-pills">
    <li class="nav-item"><a href="/" class="nav-link " aria-current="page">Home</a></li>
    <li class="nav-item"><a href="/new" class="nav-link">Write</a></li>
    <li class="nav-item"><a href="/forum" class="nav-link active">Forum</a></li>
    <li class="nav-item"><a href="/register" class="nav-link">Register</a></li>
    <li class="nav-item"><a href="/profile" class="nav-link">Profile</a></li>
  </ul>
</header>

<div class="center3">
  <div class="box">
    <div class="grid">
  <h1>{{ post.title | urlize | safe }}</h1>
  <h2 class="right"> <a class="link" href="/users/{{ post.authorId }}">{{ post.username }}</a></h2>
  </div>
  <br>
    <h5>{{ post.content | urlize | safe }}</h5>
    <br>
  </div>
  <p>{{ post.createdAt }}</p>
  {% if loggedin === 1 %}
<a class="btn btn-primary" href="/comment/ {{ post.id }}">Kommentera</a>
  {% endif %}
    </div>


    <ul>
      {% for row in rows %}
      <li>
    <div class="center3">
      <div class="box">
      <div class="grid">
      <h5> <a class="link" href="/users/{{ post.authorId }}"><p>{{ row.name }}</p> </a></h5>
    </div>
        <h5 >{{ row.ucomment | urlize | safe }}</h5>
      </div>
    <p>{{ row.createdAt }}</p>
    </li>
    {% endfor %}
    </ul>
  </div>
  

{% endblock %}